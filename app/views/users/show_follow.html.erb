<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Fixtures:</b> <%= @user.fixtures.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
            <p>
            <%= link_to gravatar_for(user, size: 50) , user %>
            <%= link_to user.name, user %>
            <%= render 'follow_form' if logged_in? %>
            <br><br>
            </p>
          <% end %>
      </ul>
    <% end %>
  </div>
</div>