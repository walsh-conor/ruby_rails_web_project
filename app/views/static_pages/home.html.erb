<% if logged_in? %>
      <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="fixture_form">
            <%= render 'shared/fixture_form' %>
          </section>
        </aside>
        <div class="col-md-8">
          <h3>Fixture Feed</h3>
          <%= render 'shared/feed' %>
        </div>
      </div>
    <% else %>
      <div class="center jumbotron">
        <h1>Welcome to TeamSheet</h1>

        <h2>
          The Match Fixture Application
        </h2>
          <%= image_tag("logo.png", :alt => "TeamSheet") %>
        <br>
        <br>
          <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
      </div>

    <% end %>